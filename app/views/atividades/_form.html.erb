<%= form_with(model: atividade, local: true) do |form| %>
  <% if atividade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(atividade.errors.count, "error") %> JÃ¡ existe uma tarefa com esses mesmos dados</h2>

      <ul>
        <% atividade.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <hr>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <label><strong>Nome da atividade</strong></label>
        <%= form.text_field :nome, class:"form-control" %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <label><strong>Tipo da tarefa</strong></label>
        <%= form.text_field :tipo_de_tarefa_id, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <div class="actions" style="text-align:center">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
      </div>
    </div>
  </div>
<% end %>
