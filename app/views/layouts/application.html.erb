<!DOCTYPE html>
<html>
  <head>
    <title>Organizer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-dark bg-dark" style="color: white; font-size: 20px; padding: 20px">
      <a class="navbar-brand">Organizer</a>
      
      <form class="form-inline">
        <% if user_signed_in? %>
          <strong  style="margin-right: 50px"><%= current_user.email %></strong>
          <div  style="margin-right: 30px">
            <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'btn btn-info' %>
          </div>
          <div  style="margin-right: 10px">
            <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'btn btn-danger'  %>
          </div>
        <% else %>
          <div  style="margin-right: 30px">
            <%= link_to "Registrar-se", new_user_registration_path, :class => 'btn btn-warning' %>
          </div>
          <div  style="margin-right: 10px">
            <%= link_to "Login", new_user_session_path, :class => 'btn btn-success'  %>
          </div>
        <% end %>  
      </form>
    </nav>

    <!--<div class="container-fluid">-->
      <div class="row">
        <div class="col-2">
          <%= render partial: "layouts/sidebar_menu" %>
        </div>
        <div class="col-10">
          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>

          <div class="card" style = "padding: 2rem; margin: 2rem; background-color: rgba(255, 255, 255, 0.8)">
            <div class="card-body">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    <!--</div>-->
  </body>
</html>
