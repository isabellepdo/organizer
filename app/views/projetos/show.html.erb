
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-10">
    <h1>Projetos</h1>
  </div>
  <div class="col-2">
    <span class="badge badge-pill badge-success"><%=@projeto.status_formatado%></span>
  </div>
</div>

<hr>

<div class="container-fluid" style="margin-top:4rem">
  <div class="row">
    <div class="col-3">
      <p>
        <strong>Código</strong><br><br>
        <%= @projeto.codigo %>
      </p>
    </div>

    <div class="col-9">
      <p>
        <strong>Nome do Projeto</strong><br><br>
        <%= @projeto.nome %>
      </p>
    </div>
  </div>
  <br>
  <div class="row">

    <div class="col-10"> 
      <p>
        <strong>Tipo</strong><br><br>
        <%= @projeto.tipo_de_projeto.tipo %>
      </p>
    </div>

    <div class="col-2"> 
      <p>
        <strong>Prazo</strong><br><br>
        <%= @projeto.prazo_formatado %>
      </p>
    </div>

    
    <div class="col-6">
      <p>
        <strong>Cliente</strong><br><br>
        <%= @projeto.cliente.nome %>
      </p>
    </div>
  </div>

  <br><br>
  <div class="row">
    <div class="col-12">
      <p>
        <strong>Descrição</strong><br><br>
        <%= @projeto.descricao %>
      </p>
    </div>
  </div>

<div class="float-sm-right" style="margin-top:3rem">
  <%= link_to 'Editar', edit_projeto_path(@projeto), class: "btn btn-info" %> 
  <%= link_to 'Voltar', projetos_path , class: "btn btn-secondary" %>
</div>

<hr>

<div class="container-fluid" style="margin-top:8rem">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="obs-tab" data-toggle="tab" href="#obs" role="tab" aria-controls="obs" aria-selected="true">Observações</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tarefas-tab" data-toggle="tab" href="#tarefas" role="tab" aria-controls="tarefas" aria-selected="false">Tarefas e atividades</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="orcamento-tab" data-toggle="tab" href="#orcamento" role="tab" aria-controls="orcamento" aria-selected="false">Orçamento</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="condicionantes-tab" data-toggle="tab" href="#condicionantes" role="tab" aria-controls="condicionantes" aria-selected="false">Condicionantes</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="gerenciar-tab" data-toggle="tab" href="#gerenciar" role="tab" aria-controls="gerenciar" aria-selected="false">Gerenciar</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="obs" role="tabpanel" aria-labelledby="obs-tab"><%= render 'observacoes', projeto: @projeto %></div>
    <div class="tab-pane fade" id="tarefas" role="tabpanel" aria-labelledby="tarefas-tab">...</div>
    <div class="tab-pane fade" id="orcamento" role="tabpanel" aria-labelledby="orcamento-tab"><%= render 'orcamento', projeto: @projeto %></div>
    <div class="tab-pane fade" id="condicionantes" role="tabpanel" aria-labelledby="condicionantes-tab">...</div>
    <div class="tab-pane fade" id="gerenciar" role="tabpanel" aria-labelledby="gerenciar-tab">...</div>
  </div>

</div>

<script>
  $(function () {
    $('#myTab li:last-child a').tab('show')
  })
</script>

<style>
  p{
    font-size: 22px !important;
  }

  .nav{
    font-size: 1.2rem !important;
  }
</style>


