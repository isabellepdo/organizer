<p id="notice"><%= notice %></p>

<h1>Projetos</h1>

<table class="table" style="margin-top:2rem">
  <thead class="thead-dark">
    <tr>
      <th>Codigo</th>
      <th>Nome</th>
      <th>Status</th>
      <th>Tipo</th>
      <th>Prazo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projetos.each do |projeto| %>
      <tr>
        <td><%= projeto.codigo %></td>
        <td><%= projeto.nome %></td>
        <td><%= projeto.status_formatado %></td>
        <td><%= projeto.tipo_de_projeto.tipo %></td>
        <td><%= projeto.prazo_formatado %></td>
        <td><%= link_to 'Mostrar', projeto, class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_projeto_path(projeto), class:"btn btn-info" %></td>
        <td><%= link_to 'Excluir', projeto, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

