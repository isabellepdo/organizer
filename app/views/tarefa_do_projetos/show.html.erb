<p id="notice"><%= notice %></p>
<h2>Tarefa do Projeto  <strong><%=@tarefa_do_projeto.projeto.nome%></strong></h2>
<br>
<hr>

<div class="container-fluid" style="margin-top:4rem">
  <div class="row">
    <div class="col-12">
      <p>
        <strong style="font-size:20px">Tarefa</strong><br><br>
        <%= @tarefa_do_projeto.tarefa.codigo%> <strong>-</strong> <%= @tarefa_do_projeto.tarefa.nome %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <p>
        <strong style="font-size:20px">Descrição</strong><br><br>
        <%= @tarefa_do_projeto.descricao %>
      </p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-5">
      <p>
        <strong style="font-size:20px">Responsável</strong><br><br>
        <%= @tarefa_do_projeto.user.email %>
      </p>
    </div>

    <div class="col-4">
      <p>
        <strong style="font-size:20px">Status</strong><br><br>
        <%= @tarefa_do_projeto.status_formatado %>
      </p>
    </div>

    <div class="col-3">
      <p>
        <strong style="font-size:20px">Prazo</strong><br><br>
        <%= @tarefa_do_projeto.prazo_formatado %>
      </p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <p>
        <strong style="font-size:20px">Entrega da tarefa</strong><br><br>
        <%= @tarefa_do_projeto.link_nuvem %>
      </p>
    </div>
  </div>
</div>

<div class="float-sm-right" style="margin-top:3rem">
  <%= link_to 'Editar', edit_tarefa_do_projeto_path(@tarefa_do_projeto), class:"btn btn-info" %>
  <%= link_to 'Voltar', tarefa_do_projetos_path, class:"btn btn-secondary" %>
</div>

<div class="container-fluid" style="margin-top:8rem">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="obs-tab" data-toggle="tab" href="#obs" role="tab" aria-controls="obs" aria-selected="true">Observações</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tarefas-tab" data-toggle="tab" href="#tarefas" role="tab" aria-controls="tarefas" aria-selected="false">Atividades</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="obs" role="tabpanel" aria-labelledby="obs-tab">...1..</div>
    <div class="tab-pane fade" id="tarefas" role="tabpanel" aria-labelledby="tarefas-tab">..2..</div>
  </div>

</div>

<script>
  $(function () {
    $('#myTab li:last-child a').tab('show')
  })
</script>

<style>
  p{
    font-size: 22px !important;
  }

  .nav{
    font-size: 1.2rem !important;
  }
</style>
