<p id="notice"><%= notice %></p>

<h1>Tarefas</h1>

<table class="table" style="margin-top:2rem">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Codigo</th>
      <th>Tipo de projeto</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefas.each do |tarefa| %>
      <tr>
        <td><%= tarefa.nome %></td>
        <td><%= tarefa.codigo %></td>
        <td><%= tarefa.tipo_de_projeto_id %></td>
        <td><%= tarefa.valor %></td>
        <td><%= link_to 'Mostrar', tarefa, class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_tarefa_path(tarefa), class:"btn btn-info" %></td>
        <td><%= link_to 'Excluir', tarefa, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

