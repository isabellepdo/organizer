<%= form_with(model: cliente, local: true) do |form|%>
  <% if cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cliente.errors.count, "error") %> Há um cliente salvo com os mesmos dados</h2>

      <ul>
        <% cliente.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label><strong>Dados do Cliente</strong></label>
  <hr>
  <div class="row">
    <div class="col-9">
      <div class="form-group">
        <label><strong>Nome</strong></label>
        <%= form.text_field :nome, class:"form-control" %>
      </div>
    </div>

    <div class="col-3" style="font-size:20px">
      <br>
      <div class="form-group">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
          <label class="form-check-label" for="inlineRadio1">Física</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
          <label class="form-check-label" for="inlineRadio2">Jurídica</label>
        </div>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <label><strong>Telefone</strong></label>
        <%= form.text_field :telefone, id: 'telefone', class:"form-control only-num" %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <label><strong>Celular</strong></label>
        <%= form.text_field :celular, id:'celular', class:"form-control only-num" %>
      </div>
    </div>

    <div class="col-8">
      <div class="form-group">
        <label><strong>Email</strong></label>
        <%= form.text_field :email, class:"form-control" %>
      </div>
    </div>

    <div class="col-4">
      <div class="form-group">
        <label><strong>CNPJ/CPF</strong></label>
        <%= form.text_field :cnpj, class:"form-control only-num" %>
      </div>
    </div>
  </div>
  
  <label><strong>Endereço</strong></label>
  <hr>
  <div class="row">
    <div class="col-9">
      <div class="form-group">
        <label><strong>Logradouro</strong></label>
        <%= form.text_field :endereco, class:"form-control" %>
      </div>
    </div>

    <div class="col-3">
      <div class="form-group">
        <label><strong>Número</strong></label>
        <%= form.text_field :numero, class:"form-control only-num" %>
      </div>
    </div>

    <div class="col-4">
      <div class="form-group">
        <label><strong>CEP</strong></label>
        <%= form.text_field :cep, id:'cep', class:"form-control only-num" %>
      </div>
    </div>

    <div class="col-3">
      <div class="form-group">
        <label><strong>Bairro</strong></label>
        <%= form.text_field :bairro, class:"form-control" %>
      </div>
    </div>

    <div class="col-3">
      <div class="form-group">
        <label><strong>Cidade</strong></label>
        <%= form.text_field :cidade, class:"form-control" %>
      </div>
    </div>

    <div class="col-2">
      <div class="form-group">
        <label><strong>Estado</strong></label>
        <select class="form-control" id="selectestados">
          <option>Selecionar</option>
          <option>AC</option>
          <option>AL</option>
          <option>AP</option>
          <option>AM</option>
          <option>BA</option>
          <option>CE</option>
          <option>ES</option>
          <option>AP</option>
          <option>GO</option>
          <option>MA</option>
          <option>MT</option>
          <option>MS</option>
          <option>MG</option>
          <option>PA</option>
          <option>PB</option>
          <option>PR</option>
          <option>PE</option>
          <option>PI</option>
          <option>RJ</option>
          <option>RN</option>
          <option>RS</option>
          <option>RO</option>
          <option>SC</option>
          <option>SP</option>
          <option>SE</option>
          <option>TO</option>
          <option>DF</option>
        </select>
        <%= form.hidden_field :estado, class:"form-control" %>
      </div>
    </div>    


  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <div class="actions" style="text-align:center">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
      </div>
    </div>
  </div>

  <hr>
<% end %>

