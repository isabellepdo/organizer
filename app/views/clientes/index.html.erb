<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table" style="margin-top:2rem">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.formata_telefone %></td>
        <td><%= cliente.formata_celular %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.cidade %></td>
        <td><%= cliente.estado %></td>
        <td><%= link_to 'Mostrar', cliente, class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), class:"btn btn-info" %></td>
        <td><%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

