<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table" style="margin-top:2rem">
  <thead class="thead-dark">
    <tr>
      <th>Nome da tag</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.nome %></td>
        <td><%= tag.obs %></td>
        <td><%= link_to 'Mostrar', tag, class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_tag_path(tag), class:"btn btn-info" %></td>
        <td><%= link_to 'Excluir', tag, method: :delete, data: { confirm: 'Você tem certeza disso?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
